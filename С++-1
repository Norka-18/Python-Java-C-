#include <iostream>
#include <string>

int main() {
    std::string a = "AaBbCc";
    std::cout << "a[::2] -> ";
    for (size_t i = 0; i < a.length(); i += 2) {
        std::cout << a[i];
    }
    std::cout << std::endl << std::endl;

    std::cout << "a[1::2] -> ";
    for (size_t i = 1; i < a.length(); i += 2) {
        std::cout << a[i];
    }
    std::cout << std::endl;

    return 0;
}
